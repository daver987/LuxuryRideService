// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASEURL")
}

model User {
  id           String   @id @default(uuid())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  firstName    String
  lastName     String
  emailAddress String   @unique
  phoneNumber  String   @unique
  quotes       Quote[]
}

model Quote {
  id           String     @id @default(uuid())
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  quoteNumber  String     @unique @db.VarChar(255)
  user         User       @relation(fields: [userId], references: [id])
  userId       String     @db.VarChar(255)
  TripDetails  TripDetail @relation(fields: [tripDetailId], references: [id])
  tripDetailId String     @unique @db.VarChar(255)
}

model TripDetail {
  id             String   @id @default(uuid())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  quoteId        String   @db.VarChar(255)
  pickupDate     DateTime @db.Date
  pickupTime     DateTime
  pickupAddress  String
  dropoffAddress String
  vehicleType    String
  serviceType    String
  passengerCount Int
  hourCount      Int
  isRoundTrip    Boolean  @default(false)
  distance       Float
  duration       Float
  baseFare       Float
  fuelSurcharge  Float
  gratuity       Float
  totalCost      Float
  Quote          Quote[]
}

model Preferences {
  id                    String      @id @default(uuid())
  createdAt             DateTime    @default(now())
  updatedAt             DateTime    @updatedAt
  serviceTypeOptions    ServiceType @relation(fields: [serviceTypeId], references: [id])
  vehicleTypeOptions    String
  passengerCountOptions Int
  hoursCountOptions     Int
  serviceTypeId         String
}

model ServiceType {
  id              String        @id @default(uuid())
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  serviceName     String
  minimumHours    Int
  minimumPrice    Float
  pricePerHour    Float
  minimumDistance Float
  pricePerKm      Float
  preferences     Preferences[]
}

model VehicleType {
  id              String   @id @default(uuid())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  vehicleName     String
  vehicleCapacity Int
  vehicleImage    String
}
